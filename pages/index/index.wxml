<swiper class="section" indicator-dots="{{true}}" indicator-color="rgba(255,255,255,0.3)" indicator-active-color="#ffffff">
  <block wx:for="{{slides}}" wx:key="id">
    <swiper-item>
      <image src="{{item.image}}" mode="aspectFill"/>
      <view class="content">
        <view class="sub-header">{{item.sub_header}}</view>
        <view class="header">{{item.header}}</view>
        <view class="description">{{item.description}}</view>
        <view class="action">
          <button class="button">了解详情</button>
          <button class="button primary">查看更多</button>
        </view>
      </view>
    </swiper-item>
  </block>
</swiper>